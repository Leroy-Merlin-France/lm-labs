<?xml version="1.0"?>
<component name="com.leroymerlin.corp.fr.nuxeo.labs.Adapters">

  <documentation>
    Defines Page document adapter
  </documentation>

  <extension target="org.nuxeo.ecm.core.api.DocumentAdapterService"
    point="adapters">
    
    <!-- Classeur Document Adapter -->
    <adapter class="com.leroymerlin.corp.fr.nuxeo.labs.site.classeur.PageClasseur"
      factory="com.leroymerlin.corp.fr.nuxeo.labs.site.classeur.PageClasseurAdapterFactory" />
    <adapter class="com.leroymerlin.corp.fr.nuxeo.labs.site.classeur.PageClasseurFolder"
      factory="com.leroymerlin.corp.fr.nuxeo.labs.site.classeur.PageClasseurAdapterFactory" />  
    <!-- News Document Adapter -->
    <adapter class="com.leroymerlin.corp.fr.nuxeo.labs.site.news.LabsNews"
      factory="com.leroymerlin.corp.fr.nuxeo.labs.site.news.LabsNewsAdapterFactory" />
    
    <!-- PageList Document Adapter -->
    <adapter class="com.leroymerlin.corp.fr.nuxeo.labs.site.list.PageList"
      factory="com.leroymerlin.corp.fr.nuxeo.labs.site.list.PageListAdapterFactory" />
	
    <!-- PageListEntry Document Adapter -->
    <adapter class="com.leroymerlin.corp.fr.nuxeo.labs.site.list.PageListEntry"
      factory="com.leroymerlin.corp.fr.nuxeo.labs.site.list.PageListEntryAdapterFactory" />

    <adapter class="com.leroymerlin.corp.fr.nuxeo.labs.site.blocs.PageBlocs"
      factory="com.leroymerlin.corp.fr.nuxeo.labs.site.blocs.PageBlocsAdapterFactory" />
      
    <!-- ExternalURL Document Adapter -->
    <adapter class="com.leroymerlin.corp.fr.nuxeo.labs.site.blocs.ExternalURL"
      factory="com.leroymerlin.corp.fr.nuxeo.labs.site.blocs.ExternalURLAdapterFactory" />

    <adapter class="com.leroymerlin.corp.fr.nuxeo.labs.site.labssite.LabsSite"
      factory="com.leroymerlin.corp.fr.nuxeo.labs.site.labssite.LabsSiteAdapterFactory" />

	<adapter class="com.leroymerlin.corp.fr.nuxeo.labs.site.Page"
      factory="com.leroymerlin.corp.fr.nuxeo.labs.site.page.PageAdapterFactory" />
      
      <adapter class="com.leroymerlin.corp.fr.nuxeo.labs.site.html.HtmlPage"
      factory="com.leroymerlin.corp.fr.nuxeo.labs.site.html.HtmlPageAdapterFactory" />
  </extension>
  
</component>
